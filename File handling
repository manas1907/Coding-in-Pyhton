f = open("D:\\Demofile.txt", "r")
for x in f:
    print(x)
f = open("D:\\Demofile.txt", "a")
f.write("Now the file has been appended")
f.close()
f = open("D:\\Demofile.txt", "r")
print(f.readline())
print(f.readline())
f.close()